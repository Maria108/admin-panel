<h1>Listing courses</h1>
 
<ul>
  <% @courses.each do |course| %>
      <li><%= course.name %></li>
      <li><%= course.hours %></li>
      <li><%= link_to 'Show', course_path(course) %></li>
      <% if is_admin_user %>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Delete', course_path(course), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
  <% end %>
</ul>
