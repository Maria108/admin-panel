<h1>New Courses</h1>

<%= form_with scope: :course, url: courses_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :hours %><br>
    <%= form.text_field :hours %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

