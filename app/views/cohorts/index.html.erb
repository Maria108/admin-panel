<h1>Cohorts of our school:</h1>
 
<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Start date</th>
      <th scope="col">End date</th>
      <th scope="col">Course</th>
      <th scope="col">Master</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @cohorts.each do |cohort| %>
    <tr>
      <td><%= cohort.name %></td>
      <td><%= cohort.start_date %></td>
      <td><%= cohort.end_date %></td>
      <td><%= cohort.course.name %></td>
      <td><%= cohort.master.full_name %></td>
      <td>
        <%= link_to 'Show', cohort_path(cohort) %>
        <% if is_admin_user %>
          <%= link_to 'Edit', edit_cohort_path(cohort) %>
          <%= link_to 'Delete', cohort_path(cohort), method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
